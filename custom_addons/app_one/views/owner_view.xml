<odoo>
    <!--    owner's tree view-->

    <record id="owners_view_tree" model="ir.ui.view">
        <field name="name">owners tree</field>
        <field name="model">owner</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="phone"/>
                <field name="address"/>
            </tree>
        </field>
    </record>
<!--    owner's form view-->
    <record id="owner_view_form" model="ir.ui.view">
        <field name="name">owner form</field>
        <field name="model">owner</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oi_title">
                        <lable for="name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group string="Owner's Card">
                        <field name="phone"/>
                        <field name="address"/>
                    </group>
                    <group string="Properties" >
                        <field name="property_ids" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!--    owner's search view-->

    <record id="owners_action" model="ir.actions.act_window">
        <field name="name">Owner</field>
        <field name="res_model">owner</field>
    </record>
    <menuitem
            id="owners_menu"
            name="Owners"
            parent="owner_menu"
            action="owners_action"
    />
</odoo>